/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 550rpx;  
  height: 100%;    
  box-sizing: border-box;  
  background: #fff;  
  border-left:4rpx solid #f8f8f8;

}  
.cate-box{
    height: 100%;
    box-sizing: border-box;
    margin: 0 62rpx;
    
}

.cate-title{
    width:100%;
    height: 26rpx;
    text-align: center;
    color: #333333;
    display:flex;
    justify-content:center;
    font-size:26rpx;
    font-family:"PingFangSC-Regular";
    margin:0 0 40rpx 0;
    padding-top: 48rpx;
}
.cate-title image{
  width:100rpx;
  height:3rpx;
  vertical-align:middle;
}
.cate-title text{
  padding:0 18rpx;
}

.product{
  width:100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding:20rpx 30rpx;

}
.product-list{
    width: 150rpx;
    text-align: center;  
    margin-right:20rpx;
    margin-bottom:30rpx;

}
.product-list image{
    width: 150rpx;
    height: 100rpx;
    margin-bottom: 15rpx;

}
.classname{
   color:#595757; 
   font-size:26rpx;
   font-family:"PingFangSC-Medium";
}
.product-list:nth-child(3n){
    margin-right: 0;
}