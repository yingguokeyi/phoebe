/* pages/classify/classify.wxss */
page{
  height: 100%;
}
.heard{
  width: 100%;
  height: 86rpx;
  border-bottom:solid 1rpx #ebebeb;
  display: flex;
  justify-content: center;
  align-items: center;
}
.heard-Search{

  width: 662rpx;
  height: 60rpx;
  font-size:28rpx;
  color:#999999;
}
.inportWrap{
  height: 60rpx;
  width:100%;
  border-radius: 8rpx;
  background: #f5f5f5;
   display:flex;
  align-items:center; 
}
.heade-icon{
  width:28rpx;
  height:28rpx;
  margin-top: 10rpx;
  padding:0 12rpx 0 20rpx;
}

/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 90%;  
  background-color: #fff;  
  color: #939393;  
}  
/*左侧栏主盒子*/  
.nav_left{  
  /*设置行内块级元素（没使用定位）*/  
  display: inline-block;  
  width: 200rpx;  
  height: 100%;  
  /*主盒子设置背景色为灰色*/  
  background: #fff;  
  text-align: center;  
  border-left:2rpx solid #f8f8f8;

}  

.cateTitle{
  height:94rpx;
  background:#f8f8f8;
  line-height:94rpx;
  padding:0 15rpx;
   font-family:"PingFangSC-Bold";
   color:rgb(89,87,87);
   font-size:30rpx;
}

.nav_left .cate-list{
    width:200rpx;

    height: 94rpx;
    line-height: 94rpx;
    text-align: center;
    font-size:28rpx;
    color:#333333;
    font-family:"PingFangSC-Medium";
    box-sizing:border-box;

}
.nav_left .cate-list.on{
     color: #b61c25;
    border-top:4rpx solid #f8f8f8;
    border-bottom:4rpx solid #f8f8f8;
    background:white;
}
