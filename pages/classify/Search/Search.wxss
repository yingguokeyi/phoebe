/* pages/classify/Search/Search.wxss */
@import "../wxSearch/wxSearch.wxss";
/*商品选择*/
.search-select{
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  border-top:solid 1rpx #ebebeb;
  border-bottom:solid 1rpx #ebebeb;
}
.search-select-text{
  width: 100%;
  display:flex;
  justify-content: space-between;
  font-family: 'PingFangSC-Medium';
  font-size: 28rpx;
  color: #999999;
}
.search-sales{
  margin-left: 58rpx;
}
.search-price{
  margin-right: 210rpx;
}
/*商品列表*/
.cart-no{
  width:100%;
  height: 100%;
}
.cart-no-show{
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  padding:0 20rpx 20rpx;

}
.cart-no-list{
 width:350rpx;
 background:#ffffff;
 margin-bottom:10rpx;
}
.cart-no-image image{
  width:350rpx;
  height:350rpx;
  border-bottom:solid 1rpx #ebebeb;
}
.cart-no-title{
  font-family:"PingFangSC-Regular";
  font-size:26rpx;
  color:#333333;
  margin:20rpx 0 20rpx 16rpx;
}
/*商品价格展示*/
.cart-no-money{
  margin:0 0 20rpx 16rpx;
}
.cart-no-symbol,.cart-no-price,.cart-no-explain{
   font-family:"PingFangSC-Regular";
   color:#a5772c; 
}
.cart-no-symbol,.cart-no-explain{
   font-size:24rpx;
}
.cart-no-price{
   font-size:28rpx;
}
.cart-no-explain{
  margin:0 12rpx 0 24rpx;
  color:#666666;
}
/*导航*/
.nav-wrapper {
    /* display: flex;
  justify-content: space-around; 
   padding: 26rpx 26rpx 24rpx 0;   */
  font-size: 28rpx;
  border-top: 1rpx solid #e9e8ee;
  border-bottom: 1rpx solid #e9e8ee;
  height:87rpx;
  line-height:87rpx;
}
.nav-wrapper view{
  display:inline-block;
   width:30%; 
   text-align:center;  
}

.filter>image {
  width: 25rpx;
  height: 26rpx;
  vertical-align: middle;
  padding-bottom: 2rpx;
}

.left-image>image {
  width: 224rpx;
  height: 241rpx;
}

.result_item {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.right-production {
  width: 450rpx;
  border-bottom: 1rpx solid #e9e8ee;
  padding-right: 20rpx;
  margin-top: 30rpx;
}

.item-title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
}

.price {
  font-size: 20rpx;
  margin: 34rpx 0 20rpx 0;
}

.price>text {
  font-size: 28rpx;
}

.comment {
  font-size: 24rpx;
  color: #aaa;
}

.comment>text {
  margin-right: 10rpx;
}

.selected {
  color: #f23030;
  font-weight: 700;
}

.nav-price {
  position: relative;
}

.top-arrow {
  position: absolute;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #c7cfcc;
  top: 50rpx;
  right: 27rpx;
}
.top-arrow-slected{
  position: absolute;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #f23030;
  top: 50rpx;
  right: 27rpx;
}
.bottom-arrow {
  position: absolute;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 12rpx solid #c7cfcc;
  top: 32rpx;
  right: 27rpx;
}
.bottom-arrow-selected{
   position: absolute;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 12rpx solid #f23030;
  top: 32rpx;
  right: 27rpx;
}

.commission{
  width: 100%;
  height: 50rpx;
  background: linear-gradient(90deg,#FA8138,#FF5A44);
  position: relative;
  bottom:50rpx;
  text-align: center;
  line-height: 50rpx;
  color:#fff;
  font-size: 24rpx;
}

.cargo-pro-image{
  display:inline-block;
  width: 170rpx;
  position:relative;
}
.cargo-pro-image image{
  width: 170rpx;
  height: 170rpx;
}
.cargo-solid{
  display: inline-block;
  width: 540rpx;
  vertical-align:top;

}
.cargo-pro-title{
    font-family:'PingFangSC-Regular'; 
    font-size:28rpx;
    color:#9c9b9b;
    display: -webkit-box; 
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    line-height:42rpx;
    }
 .cargo-pro-list{
  margin:0 30rpx 0 18rpx;
} 
 .cargo-pro-name{
  width:60rpx;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  background:#f8f5e4;
  border-radius:2rpx;
  font-size:22rpx;
  color:#c8a200;
  display:inline-block; 
  margin-right:18rpx; 
  position: relative;
  bottom:4rpx;  
  font-weight: bold;
}
.cargo-pro-texts{
  font-family:"PingFangHK-Regular"; 
  font-size:29rpx;
  color: #595757;
 
  /* line-height: 15rpx; */
}
.cargo-pro-desc{
  font-size:24rpx;
  color:#acacac;
  height:30rpx;
   overflow: hidden; 
   text-overflow: ellipsis;
   line-height:35rpx;

}
.cargo-pro-state{
  font-size: 24rpx;
  color: #999999;
}
.cargo-pro-money{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx; 
}
.cargo-pro-price{
  font-size: 28rpx;
  color: #e40012;
  /* position: relative;
  top:25rpx; */
  font-weight: bold;
}
.cargo-pro-desc{
  font-size:24rpx;
  color:#acacac;
  height:42rpx;
   overflow: hidden; 
   text-overflow: ellipsis;
   line-height:40rpx;

}
.coupon image{
  width:186rpx;
  height:31rpx;
}
.coupon{
  width:190rpx;
  height:31rpx;
  margin:15rpx 0 32rpx 0;
  position: relative;
}
.couponWords{
  display: inline-block;
  vertical-align: bottom;
  width:110rpx;
  height:32rpx;
  text-align: center;
  line-height: 40rpx;
  color:#e40012;
  font-size:20rpx;
  position: absolute;
  top:0;
  left:0;
}