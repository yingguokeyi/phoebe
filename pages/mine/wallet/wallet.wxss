/* pages/mine/wallet/wallet.wxss */
/* 账户可提现余额 */
page{
  background: #f8f8f8;
}
.wallet-wrap{
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.wallet-header{
  width: 100%;
  height: 220rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.wallet-header-left .remain{
  margin-left:30rpx;
  font-size:28rpx;
  color:#333;
  margin-top:32rpx;

}
/* 钱 */
.wallet-header-right .wallet{
  font-size:40rpx;
  color:#e40012;
  margin-left:30rpx;
  margin-bottom:26px;
}

/* 提现等样式 */
.my-bottom{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #333;
}
.li{
  width: 100%;
  height: 89rpx;
  background: #fff;
  border-bottom: 1px solid #F9F9F9;
  line-height: 90rpx;
  font-size: 26rpx;
  color:#333;
  display: flex;
  justify-content: space-between;
}

 .li text{
  margin-left: 26rpx; 
  font-size: 26rpx;
  color:#333;
  /* font-weight: bold; */
} 
.li .newDiv .news{
  width: 36rpx;
  height:36rpx;
  margin-left:30rpx;
  margin-bottom:-10rpx;
  

}
.jiantou{
  width: 12rpx;
  height: 24rpx;
  margin-top: 25rpx;
  margin-right: 40rpx;
}

.logout {
  width:80%;
  margin-top:12rpx;
  line-height:70rpx;
  text-align: center;
  background:#A5772C;
  color:white;
}
.my-bottom .li_friend{
  margin-top:20rpx;
}
.bottom-area {
  display: block;
  width: 40%;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box; 
  font-size: 8rpx;
  text-align: center;
}
