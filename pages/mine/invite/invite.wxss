/*邀请码样式*/
.invite-codes{
  width:100%;
  height:80rpx;
  background-color:#fff;
  font-size:30rpx;
  line-height:80rpx;
  color: #333333;
  text-align:center;
}
.invite-codes text{
  padding:0 30rpx;
  color:#5c7098;
  font-size:38rpx;
  font-family:PingFangSC-Medium;
  vertical-align:middle;
}
 button[class="btn"]::after {
  border: 0;
}  


/*二维码*/
.invite-ewm{
  /*width: 200rpx;*/
  /* width: 100%; */
  height: auto;
  margin-left: 214rpx;
}
.invite-ewm canvas{
  width: 300rpx;
}
/*保存二维码*/
.invite-ewm-save{
  width: 160rpx;
  height: 64rpx;
  background: #b61c25;
  border-radius: 15rpx;
  margin: 0 auto 0;
  color:#fff;
  font-size:30rpx;
  line-height: 64rpx;
  text-align: center;
}
/*下半部分样式*/
.invite-bottom{
  width: 682rpx;
  height: auto;
  /* position: absolute;
  top:400rpx;
  left:34rpx; */
  margin:-54rpx 0 0 34rpx;
  text-align:center;
  background:#fff;
  min-height:800rpx;
  border-radius:0 0 30rpx 30rpx;

  /*left:44rpx;*/

}
/*我的邀请人*/
.invite-person{
  background: #fff;
  padding-bottom:15rpx;
  border-bottom:20rpx solid #f5f5f5;
}
.invite-person .invite-word{
  margin:42rpx 0 22rpx 0;
  background-color:#fff;
  font-size:30rpx;
  color:#666;
  font-weight:bold;
  line-height:43rpx;
}
/*请输入邀请人电话号*/
.invite-person .invite-case{
  width: 100%;
  height: 80rpx;
  background:#fff;
  margin-bottom:38rpx;
}
.invite-person .invite-case .search_good{
    height: 70rpx;
    width: 400rpx;
    line-height: 70rpx;
    background:#f5f5f5;
    outline: none;  
    color: #999999;
    text-align:center;
    font-size: 24rpx;
    border-radius:10rpx;
    padding: 0 26rpx;
   /* border: 2rpx solid #e1e1e1;*/
}

