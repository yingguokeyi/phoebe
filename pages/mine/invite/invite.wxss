.invite-tit{
  height: 90rpx;
  line-height: 90rpx;
  margin:0 auto 0;
  text-align: center;
  color:#666;
  font-size: 28rpx;
  font-weight: bold;
  background: #fff;
  border-top-left-radius:35rpx;
 border-top-right-radius:35rpx;
 border-top: 1rpx solid #f2f2f2;

}

.invite-tit-head{
  width: 100%;
  height: 80rpx;
  background:#f5f5f5; 
  /*margin-top: 30rpx;*/
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  font-size: 26rpx;
  color:#666;
   
}
.invite-tit-head text{
  display:inline-block;
  width:33%;
  text-align:center;
}
/*我邀请的好友的列表*/
.invite-list{
  width: 100%;
  height: 90rpx; 
  display: flex;
  justify-content: space-between;
  line-height: 90rpx;
  font-size: 26rpx;
  color:#666666;
  border-bottom: 1px solid #EFEBE5
} 
.invite-bottom .invite-list:last-child{
  border-bottom:0
}
.invite-list text{
  width:239rpx;
  height: 90rpx;
  text-align: center;

}

/*分享按钮样式*/
.invite-share{
  width:75rpx;
  height:44rpx;
  line-height:44rpx;
  border:1rpx solid #5c7098;
  position:absolute;
  top:16rpx;
  left:438rpx;
  font-size:23rpx;
  color:#5c7098;
  text-align:center;
  border-radius:15rpx;

}
