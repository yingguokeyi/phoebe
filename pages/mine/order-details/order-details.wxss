/* pages/buy/submitOrder/submitOrder.wxss */
page{
  background-color: #f9f9f9;
}
.container{
  width: 100%;
  height: auto;
}
.order-message{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #FFF2DF;
  color:#a5772c;
  font-family: "PingFangSC-Regular";
  font-size: 26rpx;
}

.order-site{
  width: 100%;
  display:flex;
  align-items: center;
  font-family: "PingFangSC-Regular";
  background-color: #fff;
  padding-top:20rpx;

}
.order-site-logo{
 display: flex;
 align-items: center;
 margin: 0 30rpx;
}
.order-site-logo image{
  width: 34rpx;
  height: 42rpx;
}
.order-site-text{
  width:100%;
  margin: 0% 132rpx 0  0;
}
.order-site-title{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
}
.order-on-name{
  padding-left: 12rpx;
}
.order-site-list{
  font-size: 28rpx;
  color: #666666;
  margin-top: 10rpx;
}
.order-site-right{
  margin-right: 24rpx;
}
.order-site-right image{
  width: 14rpx;
  height: 26rpx;
}

/*商品列表*/
.order-solid{
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
  line-height: 88rpx;
  background-color: #fff;
}

.cargo-list{
  width: 100%;
  height: 200rpx;
  display:flex;
  background: #fff;
  border-bottom: 1rpx solid #F1F1F1;
  border-top:1rpx solid #F1F1F1;
}
.cargo-pro-image{
  width: 152rpx;
  margin-top:20rpx;
  margin-left: 30rpx;
  position:relative;
}
.cargo-pro-image image{
  width: 152rpx;
  height: 152rpx;
  border: solid 1rpx #ebebeb;
}
.cargo-solid{
  width: 100%;
}
.cargo-pro-list{
  margin:0 30rpx 0 18rpx;
}
 .cargo-pro-name{
  width:60rpx;
  height:26rpx;
  line-height:26rpx;
  text-align:center;
  background:#f8f5e4;
  border-radius:2rpx;
  font-size:18rpx;
  color:#c8a200;
  display:inline-block;
  margin-right:18rpx;
}
.cargo-pro-texts{
  font-family:"PingFangHK-Regular";
  font-size:30rpx;
  color: #333333;
}
.cargo-pro-title{
  height:60rpx;
  line-height:60rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  padding-top:20rpx;
}
.cargo-pro-state{
  font-size: 24rpx;
  color: #999999;
}
.cargo-pro-money{
  display: flex;
  justify-content: space-between;
}
.cargo-pro-price{
  font-size: 24rpx;
  color: #b61c25;
}
.cargo-pro-symbol{
  font-size: 24rpx;
  color: #999999;
  padding-left: 12rpx;
  text-decoration:line-through;
}
.cargo-pro-explain{
  font-size: 24rpx;
}
.cargo-pro-explain{
  font-size: 24rpx;
  color: #696969;
}
.textLB{
  display:inline-block;
  font-size:26rpx;
  color:#fff;
  width:110rpx;
  height:48rpx;
  line-height:48rpx;
  text-align:center;
  border-radius:16rpx;
  position:relative;
  transform:scale(0.78);
  background:rgb(239,85,78);
  vertical-align:middle;
}

.total-cash{
   width: 100%;
   height: auto;
   margin-top: 20rpx;
   background: #fff;
   padding: 30rpx 0;
   font-size: 26rpx;
}



.order-num{
   width: 100%;
   height: auto;
   margin-top: 20rpx;
   background: #fff;
   padding: 30rpx 0;
   font-size: 26rpx;
   color:#999;
   border-bottom:1rpx solid #F1F1F1;
}
 .order-pay{
   width: 100%;
   height: 88rpx;
   background-color: #fff;
   font-size: 26rpx;
   color:#999;
   line-height: 88rpx;
 }
 .order-getitem{
   width: 100%;
   height: auto;
   background: #fff;
   position: fixed;
   bottom:0;
   padding: 30rpx 0;
   display: flex; 
   justify-content: space-between;
 }
 .order-getitem text{
   display: inline-block;
   width: 140rpx;
   height: 54rpx;
   font-size: 24rpx;
   border-radius: 4rpx;
   line-height: 54rpx;
   text-align: center;
 }
 .copy{
   display:inline-block;
   width:70rpx;
   height:40rpx;
   border:2rpx solid #5c7098;
   border-radius:10rpx;
   line-height:40rpx;
   text-align:center;
   font-size:24rpx;
   margin-left:30rpx;
 }
 .applyMon{
    background:#b61c25;
    color:#fff;
    margin:17rpx 30rpx 17rpx 0;
    line-height:54rpx;
    height:54rpx;
    font-size:24rpx;
    border-radius:20rpx;
    display:inline-block;
    line-height:54rpx;
    padding:0 20rpx;
 }