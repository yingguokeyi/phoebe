            </navigator>
         </view>
            <button class='login-btn' disabled = "{{loginDisabled}}" style="color:{{finishBtnColor}};background:{{finishBtnBgColor}}" formType="submit" loading="{{btnLoading}}" hover-class="btnClick" hover-start-time="10ms">登录</button>
