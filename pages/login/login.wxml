                </view>  
                <view class="input-log">  
                   <!-- <image style='width:28rpx;height:36rpx;margin:0 24rpx;' src='../../image/code.png'></image> -->
                   <input type='password'  placeholder="请输入密码" id="password" name="password" bindblur="pwdMove" bindinput ="picCodeInput" maxlength='20' placeholder-style='color:#999'></input>
                </view>    
            </view> 
              <!--忘记密码  -->
          <view class='forget-pass'> 
            <text  bindtap='toforget'>忘记密码？</text>
            <navigator  url="/pages/register/register" style="background:#fff">
