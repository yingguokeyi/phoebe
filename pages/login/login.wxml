      <!-- 大背景色 -->
     <view class='register-image'>
           <image src='../../image/person/dribs.png'></image> 
    </view>
    <view class = "register-logo">
          <image mode="aspectFit" src="../../image/person/palm.png"></image>
    </view>
    <view class="content">
        <form bindsubmit="formSubmit">
            <view class="input-area">
                <view class="input-log">  
                  <!-- <image style='width:28rpx;height:36rpx;margin:0 24rpx;' src='../../image/phone.png'></image> -->
                  <input wx:if="{{tele == ''}}" type='number' placeholder="请输入手机号" name="phone"  bindinput ="phoneInput" id="phone" bindblur='phoneMove' maxlength='11' placeholder-style='color:#999'></input>
