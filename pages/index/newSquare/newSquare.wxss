.itemSingle{
    padding:28rpx 26rpx 0;
    border-bottom: 20rpx solid #f9f9f9;
}
.pubInfo>image{
    width:76rpx;
    height:76rpx;
    border-radius: 50%;
    margin-right:20rpx;
}
.nickInfo,.systemInfo{
    width:600rpx;
}
.nickInfo .time:after,.systemInfo:after{
    display: table;
    content:'';
    clear:both;
}
.pubInfo{
    display: flex;
    justify-content:space-start;
    margin-bottom:20rpx;
}
.nickInfo view image{
    width:20rpx;
    height:24rpx;
    vertical-align: middle;
    margin-right:10rpx;
}
.time .leftPull{
    font-size:26rpx;
    color:#333;
}
.time .rightPull{
    font-size:22rpx;
    color:#999;
}
.newsCon{
    font-size:26rpx;
    color:#333;
    line-height:40rpx;
    max-height:80rpx;
    /* position: relative; */
    margin-bottom:26rpx;

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2; 
    overflow: hidden;
}
