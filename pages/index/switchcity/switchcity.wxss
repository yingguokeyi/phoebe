/* pages/index/switchcity/switchcity.wxss */


/*搜索框*/
.header-put{
  width: 100%;
  border-bottom: solid 1rpx #ededed;
}
.inportWrap{
  height: 60rpx;
  margin:14rpx 44rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  display:flex;
  align-items:center;
}
.wxSearch-input{
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: left;
  margin-left: 12rpx;
  font-size:28rpx;
  color:#999999;
  float:left;
}
.wxSearch-button{
  height:60rpx;
  float:right;
}
.container-inner {
  display: flex;
  flex-direction: row-reverse;
}

.container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding: 10rpx;

}



.searchLetter {
  flex-shrink: 0;
  width: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: #666;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.selectCity {
  margin-left: 26rpx;
  font-family: "PingFangSC-Regular";
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 44rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 90rpx;
  padding-left: 34rpx;
  align-items: center;
   font-family: "PingFangSC-Regular";
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #333333;
}

.hotcity-common {
  font-size: 30rpx;
  color: #333333;
  margin:36rpx 0;
}

.hotCity {
  padding-right: 50rpx;
  margin: auto;
}

.thisCityName {
width: 154rpx;
height: 70rpx;
line-height: 70rpx;
text-align: center;
font-size: 26rpx;
color: #333333;
border-radius: 3rpx;
margin-bottom: 60rpx;
background: #f5f5f5;
}

.thishotText {
  color: #8BC34A;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #8BC34A !important;
}

.slectCity view {
  color: #8BC34A !important;
}

.weui-grids {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.weui-grid {
width: 138rpx;
height: 70rpx;
line-height: 70rpx;
text-align: center;
font-size: 26rpx;
color: #333333;
border-radius: 3rpx;
margin-bottom: 18rpx;
background: #f5f5f5;
}


.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.ul {
  display: block;
  color: grey;
  margin-left: 20rpx;
}

.li {
  display: block;
  font-weight: 100;
  font-size: 28rpx;
  padding: 16rpx 0;
}


.county {
  display: flex;
  flex-wrap: wrap;
}
